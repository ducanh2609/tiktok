<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
        integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/chat.css">
    <title>Chat</title>
</head>

<body>
    <div class="header-nav">
        <div class="header">
            <a href="/" class="logo" id="logo">
                <img src="/Image/logo.png" alt="">
            </a>
            <div class="search">
                <input class="input-search" id="inputSearch" type="text" placeholder="Tìm kiếm tài khoản và video">
                <div class="search-box" id="searchBox"></div>
                <button class="btn-search">
                    <i class="fa-solid fa-magnifying-glass fa-lg"></i>
                </button>
            </div>
            <% if(!user.username) { %>
                <a href="/login" class="login">
                    <button class="login-btn">
                        <h3>Đăng nhập</h3>
                    </button>
                </a>
                <% } else { %>
                    <div class="tool" id="tool">
                        <a href="/upfile" class="upload-tool" id="upload">
                            <i class="fa-solid fa-plus fa-lg"></i>
                            <h3>Tải lên</h3>
                        </a>
                        <a href="/chat/<%= user.tiktok_id %>" class="chat-tool" id="chat">
                            <i class="fa-regular fa-paper-plane fa-lg"></i>
                        </a>
                        <a class="message-tool" id="message">
                            <i class="fa-regular fa-message fa-lg"></i>
                        </a>
                        <div class="user-profile-tool" id="profile">
                            <img src="<%= user.image %>" alt="">
                        </div>

                    </div>
                    <div class="box-profile" id="boxProfile" style="display: none;">
                        <div><a href="/profile/@<%= user.tiktok_id %>">
                                <i class="fa-solid fa-user"></i>
                                <h4>Xem hồ sơ</h4>
                            </a>
                        </div>
                        <div><a href="">
                                <i class="fa-brands fa-bitcoin"></i>
                                <h4>Nhận xu</h4>
                            </a>
                        </div>
                        <div><a href="">
                                <i class="fa-solid fa-video"></i>
                                <h4>LIVE Studio</h4>
                            </a>
                        </div>
                        <div><a href="">
                                <i class="fa-solid fa-gear"></i>
                                <h4>Cài đặt</h4>
                            </a>
                        </div>
                        <div><a href="">
                                <i class="fa-solid fa-globe"></i>
                                <h4>Tiếng Việt</h4>
                            </a>
                        </div>
                        <div><a href="">
                                <i class="fa-solid fa-circle-question"></i>
                                <h4>Phản hồi và trợ giúp</h4>
                            </a>
                        </div>
                        <div><a href="">
                                <i class="fa-solid fa-keyboard"></i>
                                <h4>Phím tắt trên bàn phím</h4>
                            </a>
                        </div>
                        <div style="border-bottom: 1px solid rgb(48, 47, 47);">
                            <a href=""><i class="fa-solid fa-moon"></i>
                                <h4>Chế độ tối</h4>
                                <input type="checkbox" class="switch" id="switchBar">
                            </a>

                        </div>
                        <div id="logout"><a><i class="fa-solid fa-right-from-bracket"></i>
                                <h4>Đăng xuất</h4>
                            </a>
                        </div>
                    </div>
                    <% } %>
        </div>
    </div>
    <div class="content">
        <i class="fa-solid fa-arrow-left fa-lg"></i>




        <div class="message-content">
            <div class="message-left">
                <div class="list-title">
                    <h2>Tin nhắn</h2>
                    <i class="fa-solid fa-gear fa-lg"></i>
                </div>
                <div class="list-user-chat">

                    <% for(let i=0; i < allUsers.length; i++) { if(allUsers[i].user_id !=user.user_id) { %>
                        <div class="username user<%= allUsers[i].user_id %>">
                            <img src="<%= allUsers[i].image %>" alt="">
                            <div class="name">
                                <h3>
                                    <%= allUsers[i].tiktok_id %>
                                </h3>
                            </div>
                        </div>
                        <% }} %>
                </div>
            </div>




            <div class="message-right">

                <div class="message-box user<%= user.user_id%>" id="messageBox">
                    <div style="text-align: center;height: 60px;line-height: 60px;display: block; ">
                        Chọn 1 người bạn để nhắn tin
                    </div>
                </div>
                <form class="send-btn" id="sendForm" style="visibility: hidden;">
                    <input type="text" name="inputMess" placeholder="Nhập tin nhắn">
                    <button type="submit">Gửi</button>
                </form>
            </div>




        </div>
    </div>
</body>
<script src="https://cdn.socket.io/4.5.4/socket.io.min.js"
    integrity="sha384-/KNQL8Nu5gCHLqwqfQjA689Hhoqgi2S84SNUxC3roTe4EhJ9AfLkp8QiQcU8AMzI"
    crossorigin="anonymous"></script>

<script src="/chat.js"></script>

</html>